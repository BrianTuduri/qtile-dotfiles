# Usar la imagen base de Jenkins Agent con JDK 21
FROM jenkins/agent:jdk21

USER root

# Instalar dependencias necesarias, sudo y claves para Docker
RUN apt-get update && \
    apt-get install -y ca-certificates curl gnupg lsb-release sudo && \
    curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && \
    apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin && \
    rm -rf /var/lib/apt/lists/* && \
    # Añadir usuario `jenkins` al grupo `docker` para permitir la ejecución de comandos Docker
    usermod -aG docker jenkins && \
    # Dar permisos de sudo a jenkins sin necesidad de contraseña
    echo "jenkins ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Cambiar al usuario jenkins para acciones futuras en el Dockerfile
USER jenkins

WORKDIR /home/jenkins
